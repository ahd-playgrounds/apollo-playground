{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "client": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "server": "nodemon --inspect --ignore dist/ -e js,graphql dist/apollo-server.js",
    "lint:all": "eslint --fix --ignore-pattern 'node_modules/' .",
    "lint:schema": "npx graphql-schema-linter schema.graphql",
    "preserver": "tsc"
  },
  "proxy": "http://localhost:4000/",
  "graphql-schema-linter": {
    "rules": [
      "defined-types-are-used",
      "deprecations-have-a-reason",
      "enum-values-all-caps",
      "enum-values-sorted-alphabetically",
      "fields-are-camel-cased",
      "input-object-values-are-camel-cased",
      "relay-connection-arguments-spec",
      "relay-connection-types-spec",
      "relay-page-info-spec",
      "types-are-capitalized"
    ]
  },
  "dependencies": {
    "apollo-boost": "^0.1.16",
    "apollo-cache-inmemory": "^1.2.10",
    "apollo-link-batch-http": "^1.2.3",
    "apollo-server-express": "^2.0.7",
    "express": "^4.16.3",
    "graphql": "^14.4.2",
    "react": "^16.5.2",
    "react-apollo": "^2.1.11",
    "react-dom": "^16.5.2",
    "react-scripts": "2.0.5",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.4",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.5.0",
    "@graphql-codegen/introspection": "1.5.0",
    "@graphql-codegen/typescript": "1.5.0",
    "@graphql-codegen/typescript-resolvers": "1.5.0",
    "@types/express": "^4.17.0",
    "@types/graphql": "^14.2.3",
    "@types/node": "^12.7.1",
    "cpx": "^1.5.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "graphql-schema-linter": "^0.1.6",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "prettier"
    ],
    "rules": {
      "func-names": "off",
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
